{
	"plugins": [
		"@ianvs/prettier-plugin-sort-imports",
		"@upleveled/prettier-plugin-tailwindcss"
	],
	"printWidth": 80,
	"tabWidth": 2,
	"useTabs": true,
	"semi": false,
	"singleQuote": true,
	"trailingComma": "all",
	"bracketSpacing": true,
	"arrowParens": "always",
	"importOrder": [
		"^[a-z]",
		"^@",
		"^~",
		"^\\.\\.(?!/?$)",
		"^\\.\\./?$",
		"^\\./(?=.*/)(?!/?$)",
		"^\\.(?!/?$)",
		"^\\./?$",
		"^.+\\.s?css$",
		"^\\u0000"
	],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true
}
